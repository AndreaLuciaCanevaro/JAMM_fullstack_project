<!DOCTYPE html>
<html>
    <%- include("./partials/head" , {title:"JAMM Gaming"}) %>

    <body>
        
        <%- include("./partials/header") %>
        
        <section class="banner">
            <img src="images/Banner.jpg" alt="Banner de ofertas">
        </section>
        
        <main>
            <section class="last-visit">
                <h3 class="categorias">Gaming</h3>
                <div class="products">
                    <article class="objeto">
                        <img src="images/Auris.jpg" alt="Auris" class="product_img">
                        <div class="main-article">
                            <h4 class="description">Auris piola</h4>
                        </div>
                    </article>
                    <article class="objeto">
                        <a href="/productDetail"><img src="images/Play.jpg" alt="Play" class="product_img"></a>
                        <div class="main-article">
                            <h4 class="description">PlayStation5</h4>
                        </div>
                    </article>
                    <article class="objeto">
                        <img src="images/Joystick.jpg" alt="Joystick" class="product_img">
                        <div class="main-article">
                            <h4 class="description">Mando PS5</h4>
                        </div>
                    </article>
                    <article class="objeto">
                        <img src="images/JuegoSpiderMan.jpg" alt="JuegoSpiderMan" class="product_img">
                        <div class="main-article">
                            <h4 class="description">SpiderMan Miles Morales</h4>
                        </div>
                    </article>
                </div>
            </section>
            <section class="offers">
                <h3 class="categorias">Accesorios</h3>
                <div class="products">
                    <article class="objeto">
                        <img src="images/Teclado.jpg" alt="Teclado" class="product_img">
                        <div class="main-article">
                            <h4 class="description">Teclado XRT20</h4>
                        </div>
                    </article>
                    <article class="objeto">
                        <img src="images/Silla.jpg" alt="Silla" class="product_img">
                        <div class="main-article">
                            <h4 class="description">Silla Gaming Champ</h4>
                        </div>
                    </article>
                    <article class="objeto">
                        <img src="images/Mouse.jpg" alt="Mouse" class="product_img">
                        <div class="main-article">
                        <h4 class="description">Mouse Logitech 400</h4>
                        </div>
                    </article>
                    <article class="objeto">
                        <img src="images/Mousepad.jpg" alt="Mousepad" class="product_img">
                        <div class="main-article">
                            <h4 class="description">MousePad Alien XR</h4>
                        </div>
                    </article>
                </div>  
            </section>

            <section class="offers">
                <h3 class="categorias">Dispositivos</h3>
                <div class="products">
                    <article class="objeto">
                        <img src="images/Tablet.jpg" alt="Tablet" class="product_img">
                        <div class="main-article">
                            <h4 class="description">Tablet Samsung X10</h4>
                        </div>
                    </article>
                    <article class="objeto">
                        <img src="images/Notebook.jpg" alt="Notebook" class="product_img">
                        <div class="main-article">
                            <h4 class="description">Notebook Lenovo 809</h4>
                        </div>
                    </article>
                    <article class="objeto">
                        <img src="images/Celular.jpg" alt="Celular" class="product_img">
                        <div class="main-article">
                        <h4 class="description">Samsung Galaxy S10</h4>
                        </div>
                    </article>
                    <article class="objeto">
                        <img src="images/TabletPlegable.jpg" alt="TabletPlegable" class="product_img">
                        <div class="main-article">
                            <h4 class="description">Tablet LG Flex</h4>
                        </div>
                    </article>
                </div>  
            </section>
        </main>
        
        <%- include("./partials/footer") %>

    </body>
</html>