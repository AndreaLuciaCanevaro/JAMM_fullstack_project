<!DOCTYPE html>
<html>
    <%- include("../partials/head" , {title:"Todos los productos"}) %>

    <body>
        <!-- Header -->
        <%- include("../partials/header") %>
        
        <section class="banner">
            <img src="images/Banner.jpg" alt="Banner de ofertas">
        </section>
        
        <main>
            <section class="last-visit">
                <h3 class="categorias">Todos los productos</h3>
                <div class="products-b">

                          <% products.forEach(function(prod){ %> 

                                <article class="objeto">

                                    <a href="/productDetail/<%= prod.id %>"><img src="images/<%= prod.image %>" alt="Imagen" class="product_img">
                                                           
                                    <div class="main-article">
                                <h4 class="description"><%= prod.name %></h4>
                                </div>
                                </article>
                                                            
                            <% }) %> 

                                </a>
                    </section>
                    </div>
                    
                </div>
          
            </section>
         
        </main>
        
        <%- include("../partials/footer") %>

    </body>
</html>